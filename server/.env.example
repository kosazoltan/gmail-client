# Szerver konfiguráció
PORT=5000

# Domain konfiguráció (localhost fejlesztéshez)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Google OAuth2 - Google Cloud Console-ból
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Session titkosítás - generálj egy random stringet
# Példa: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_a_random_secret_string

# Token titkosítás (AES-256) - 32 karakter hex kulcs szükséges
# Példa: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=change_this_to_a_32_char_hex_key_00

# Adatbázis elérési út
DATABASE_URL=./data/gmail-client.db

# Szinkronizálás beállítások
SYNC_DAYS_BACK=30
SYNC_INTERVAL_MS=120000

# VAPID kulcsok push értesítésekhez (opcionális)
# Generálás: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_SUBJECT=mailto:your-email@example.com

# EditorConfig - konzisztens code style minden editor-ban
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single
